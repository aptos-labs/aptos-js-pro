{
  "name": "@aptos-labs/react",
  "version": "0.1.5",
  "description": "React library for Aptos applications.",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/aptos-labs/aptos-js-pro.git",
    "directory": "packages/react"
  },
  "homepage": "https://js-pro.aptos.dev/",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./connectors": {
      "types": "./dist/connectors.d.ts",
      "import": "./dist/connectors.mjs",
      "require": "./dist/connectors.js"
    }
  },
  "files": [
    "dist",
    "src",
    "!src/**/*.test.ts",
    "!src/**/*.test.tsx",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint --cache ./src",
    "lint:fix": "eslint --cache ./src --fix",
    "test": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "dependencies": {
    "zustand": "^5.0.3"
  },
  "peerDependencies": {
    "@aptos-labs/js-pro": "workspace:*",
    "@aptos-labs/ts-sdk": ">=1.35.0",
    "@tanstack/react-query": ">=5.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "typescript": ">=5.0.4",
    "@aptos-labs/wallet-adapter-react": "^4.0.0 || ^5.0.0 || ^6.0.0"
  },
  "peerDependenciesMeta": {
    "@aptos-labs/wallet-adapter-react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@aptos-labs/js-pro": "workspace:*",
    "@aptos-labs/eslint-config-petra": "workspace:*",
    "@aptos-labs/wallet-adapter-react": "^4.0.0 || ^5.0.0 || ^6.0.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitest/browser": "^3.1.2",
    "dotenv": "^16.5.0",
    "happy-dom": "^17.4.4",
    "playwright": "^1.52.0",
    "tsup": "^8.4.0",
    "vitest": "^3.1.2"
  },
  "keywords": [
    "aptos",
    "apt",
    "web3",
    "blockchain",
    "dapps",
    "wallet"
  ]
}
