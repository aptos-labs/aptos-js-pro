{
  "name": "@aptos-labs/react",
  "version": "0.1.0-beta.15",
  "description": "React library for Aptos applications.",
  "repository": {
    "type": "git",
    "url": "https://github.com/aptos-labs/js-pro.git",
    "directory": "packages/react"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint --cache ./src",
    "lint:fix": "eslint --cache ./src --fix",
    "test": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@aptos-labs/js-pro": "workspace:*",
    "@aptos-labs/wallet-adapter-react": "^4.1.5",
    "zustand": "^5.0.3"
  },
  "peerDependencies": {
    "@aptos-labs/js-pro": "workspace:*",
    "@aptos-labs/ts-sdk": ">=1.35.0",
    "@tanstack/react-query": ">=5.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "typescript": ">=5.0.4"
  },
  "devDependencies": {
    "@aptos-labs/eslint-config-petra": "workspace:*",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "tsup": "^8.4.0"
  },
  "keywords": [
    "aptos",
    "apt",
    "web3",
    "blockchain",
    "dapps",
    "wallet"
  ]
}
